/******************************************************************************* 
 * Expander icon
 * Note: IE6 doesn't correctly evaluate multiples class names,
 *		 so we create combined class names that can be used in the CSS.
 *
 * Prefix: dynatree-exp-
 * 1st character: 'e': expanded, 'c': collapsed
 * 2nd character (optional): 'd': lazy (Delayed)
 * 3rd character (optional): 'l': Last sibling       
 */
 
span.dynatree-expander
{
	background-image: image_url("jquery/dynatree/xp/ltP_nes.png");
	cursor: pointer;
}
.dynatree-exp-cl span.dynatree-expander /* Collapsed, not delayed, last sibling */
{
	background-image: image_url("jquery/dynatree/xp/ltP_ne.png");
}
.dynatree-exp-cd span.dynatree-expander /* Collapsed, delayed, not last sibling */
{
	background-image: image_url("jquery/dynatree/xp/ltD_nes.png");
}
.dynatree-exp-cdl span.dynatree-expander /* Collapsed, delayed, last sibling */
{
	background-image: image_url("jquery/dynatree/xp/ltD_ne.png");
}
.dynatree-exp-e span.dynatree-expander,  /* Expanded, not delayed, not last sibling */
.dynatree-exp-ed span.dynatree-expander  /* Expanded, delayed, not last sibling */
{
	background-image: image_url("jquery/dynatree/xp/ltM_nes.png");
}
.dynatree-exp-el span.dynatree-expander,  /* Expanded, not delayed, last sibling */
.dynatree-exp-edl span.dynatree-expander  /* Expanded, delayed, last sibling */
{
	background-image: image_url("jquery/dynatree/xp/ltM_ne.png");
}


/******************************************************************************* 
 * Checkbox icon
 */
span.dynatree-checkbox
{
	margin-left: 3px;
	background-image: image_url("jquery/dynatree/xp/cbUnchecked.png");
}
span.dynatree-checkbox:hover
{
	background-image: image_url("jquery/dynatree/xp/cbUnchecked_hover.png");
}

.dynatree-partsel span.dynatree-checkbox
{
	background-image: image_url("jquery/dynatree/xp/cbIntermediate.png");
}
.dynatree-partsel span.dynatree-checkbox:hover
{
	background-image: image_url("jquery/dynatree/xp/cbIntermediate_hover.png");
}

.dynatree-selected span.dynatree-checkbox
{
	background-image: image_url("jquery/dynatree/xp/cbChecked.png");
}
.dynatree-selected span.dynatree-checkbox:hover
{
	background-image: image_url("jquery/dynatree/xp/cbChecked_hover.png");
}

/******************************************************************************* 
 * Radiobutton icon
 * This is a customization, that may be activated by overriding the 'checkbox'
 * class name as 'dynatree-radio' in the tree options.
 */
span.dynatree-radio
{
	margin-left: 3px;
	background-image: image_url("jquery/dynatree/xp/rbUnchecked.png");
}
span.dynatree-radio:hover
{
	background-image: image_url("jquery/dynatree/xp/rbUnchecked_hover.png");
}

.dynatree-partsel span.dynatree-radio
{
	background-image: image_url("jquery/dynatree/xp/rbIntermediate.png");
}
.dynatree-partsel span.dynatree-radio:hover
{
	background-image: image_url("jquery/dynatree/xp/rbIntermediate_hover.png");
}

.dynatree-selected span.dynatree-radio
{
	background-image: image_url("jquery/dynatree/xp/rbChecked.png");
}
.dynatree-selected span.dynatree-radio:hover
{
	background-image: image_url("jquery/dynatree/xp/rbChecked_hover.png");
}

/******************************************************************************* 
 * Node type icon
 * Note: IE6 doesn't correctly evaluate multiples class names,
 *		 so we create combined class names that can be used in the CSS.
 *
 * Prefix: dynatree-ico-
 * 1st character: 'e': expanded, 'c': collapsed
 * 2nd character (optional): 'f': folder
 */
 
span.dynatree-icon /* Default icon */
{
	margin-left: 3px;
	background-image: image_url("jquery/dynatree/xp/ltDoc.png");
}

.dynatree-ico-cf span.dynatree-icon  /* Collapsed Folder */
{
	background-image: image_url("jquery/dynatree/xp/ltFld.png");
}

.dynatree-ico-ef span.dynatree-icon  /* Expanded Folder */
{
	background-image: image_url("jquery/dynatree/xp/ltFld_o.png");
}

/* Status node icons */

.dynatree-statusnode-wait span.dynatree-icon
{
	background-image: image_url("jquery/dynatree/xp/ltWait.gif");
}

.dynatree-statusnode-error span.dynatree-icon
{
	background-image: image_url("jquery/dynatree/xp/ltError.png");
}

/******************************************************************************* 
 * Node titles
 */

 /* @Chrome: otherwise hit area of node titles is broken (issue 133) */
span.dynatree-document,
span.dynatree-folder
{
    display: -moz-inline-box; /* @ FF 1+2 */
    display: inline-block; /* Required to make a span sizeable */
}


/* Remove blue color and underline from title links */
ul.dynatree-container a
/*, ul.dynatree-container a:visited*/
{
	color: black; /* inherit doesn't work on IE */
	text-decoration: none;
	vertical-align: top;
	margin: 0px;
	margin-left: 3px;
/*	outline: 0; /* @ Firefox, prevent dotted border after click */
}

ul.dynatree-container a:hover
{
	text-decoration: underline;
}

span.dynatree-document a,
span.dynatree-folder a
{
	display: inline-block; /* Better alignment, when title contains <br> */  
/*	vertical-align: top;*/
	padding-left: 3px;
	padding-right: 3px; /* Otherwise italic font will be outside bounds */
	/*	line-height: 16px; /* should be the same as img height, in case 16 px */
}
span.dynatree-folder a
{
	font-weight: bold;
}

ul.dynatree-container a:focus,
span.dynatree-focused a:link  /* @IE */
{
	background-color: #EFEBDE; /* gray */
}


span.dynatree-has-children a
{
}

span.dynatree-expanded a
{
}

span.dynatree-selected a 
{
	color: green; 
	font-style: italic;
}

span.dynatree-active a
{
	background-color: #3169C6 !important;
	color: white !important; /* @ IE6 */
}

